<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<!-- session连接工厂 -->
	<session-factory>
	<!-- 1.配置数据源（连接数据库，获取连接对象） -->
	<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="hibernate.connection.url">jdbc:mysql:///hibernate_day01</property>
	<property name="hibernate.connection.username">root</property>
	<property name="hibernate.connection.password">root</property>
	<!-- 2.指定操作数据库的方言 -->
	<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
	<!-- 3.设置打印sql语句 -->
	<property name="hibernate.show_sql">true</property>
	<!-- 4.格式化sql语句 -->
	<property name="hibernate.format_sql">true</property>
	<!-- 5.开启自动建表功能 -->
	<property name="hibernate.hbm2ddl.auto">update</property>
	<!-- 
		none  		: 默认不创建表,使用数据库的原有表
		create		: 每次操作重新创建表 (开发测试用)
		create-drop : 每次操作都先创建表,然后执行sql，再删除表(开发测试用)
		update		: 若数据库表存在就使用,表不存在就创建(更新表结构) (正常开发使用)
		validata	: 没有表就不会创建表，只会使用数据库的原有表,并会校验映射和表结构
	 -->
	 <!-- 配置C3P0连接池 -->
	<property name="connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
	<!--在连接池中可用的数据库连接的最少数目 -->
	<property name="c3p0.min_size">5</property>
	<!--在连接池中所有数据库连接的最大数目  -->
	<property name="c3p0.max_size">20</property>
	<!--设定数据库连接的过期时间,以秒为单位,
	如果连接池中的某个数据库连接处于空闲状态的时间超过了timeout时间,就会从连接池中清除 -->
	<property name="c3p0.timeout">120</property>
	 <!--每3000秒检查所有连接池中的空闲连接 以秒为单位-->
	<property name="c3p0.idle_test_period">3000</property>
	<!-- 6.配置映射文件 -->
	<mapping resource="com/yosakura/entity/User.hbm.xml"/>
	</session-factory>
</hibernate-configuration>