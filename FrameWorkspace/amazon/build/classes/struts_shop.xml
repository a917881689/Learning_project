<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	
<struts>
	<package name="" extends="struts-default" namespace="/">
		
	</package>
	
	<package name="shopAjax" extends="json-default" namespace="/">
		<!-- 添加商品到购物车 -->
		<action name="addShop" class="com.yosakura.web.action.ShopAction" method="addShop">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<!-- 删除购物车商品 -->
		<action name="deleteShopCart" class="com.yosakura.web.action.ShopAction" method="delShop">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<!-- 查询购物车商品 -->
		<action name="getShopCart" class="com.yosakura.web.action.ShopAction" method="queryShopCart">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
</struts>