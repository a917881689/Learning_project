<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Web01_servlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <!-- 配置servlet -->
  <servlet>
  	<servlet-name>Model</servlet-name>
  	<servlet-class>com.yosakura.web.servlet.ServletModel</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Model</servlet-name>
  	<!-- 完全匹配方式 -->
  	<url-pattern>/model</url-pattern>
  	<!-- 路径匹配 （*代表所有资源）-->
  	<url-pattern>/admin/*</url-pattern>
  	<!-- 扩展名匹配 （/ *不能够共存）-->
  	<url-pattern>*.action</url-pattern>
  	<!-- 后缀名和路径匹配不能同时存在 
  	<url-pattern>/admin/*.action</url-pattern> -->
  	<!-- 4.缺省路径（当前工程下所有资源，存不存在都过滤）
  	<url-pattern>/</url-pattern> -->
  </servlet-mapping>
</web-app>