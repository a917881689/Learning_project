<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LoginDemo_076</display-name>
  <welcome-file-list>
    <welcome-file>loginUI.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.yosakura.web.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.yosakura.web.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/doShop</url-pattern>
    <url-pattern>/doOrder</url-pattern>
    <url-pattern>/productView</url-pattern>
    <url-pattern>/lasterHistory</url-pattern>
    <url-pattern>/admin.jsp</url-pattern>
    <url-pattern>/user.jsp</url-pattern>
    <url-pattern>/productView.jsp</url-pattern>
  </filter-mapping>
</web-app>