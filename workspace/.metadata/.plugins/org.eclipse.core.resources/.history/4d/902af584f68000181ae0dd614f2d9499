  <display-name>Web01_servlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <!-- 配置servlet -->
  <servlet>
  	<servlet-name>Model</servlet-name>
  	<servlet-class>com.yosakura.web.servlet.ServletModel</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Model</servlet-name>
  	<!-- 完全匹配方式 -->
  	<url-pattern>/model</url-pattern>
  	<!-- 路径匹配 （*代表所有资源）-->
  	<url-pattern>/admin/*</url-pattern>
  	<!-- 扩展名匹配 （/ *不能够共存）-->
  	<url-pattern>*.action</url-pattern>
  </servlet-mapping>
</web-app>