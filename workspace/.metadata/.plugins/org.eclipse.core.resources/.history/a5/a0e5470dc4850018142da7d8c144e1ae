package com.yosakura.web.servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.yosakura.util.CookieUtil;

public class ShopServlet extends HttpServlet{
	private static final long serialVersionUID = 1L;
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException{
		// 获取所有cookie 对象
		Cookie[] cookies = req.getCookies();
		// 获取现在点击的记录
		String fid = req.getParameter("fid");
		// 获取浏览器存在的记录,找到我们需要的cookie
		String record = CookieUtil.getCookieValue(cookies, "record");
		// 历史记录 非空验证
		String newRecord = null;
		if (record != null) {
			// 获取历史记录字符串数组
			String[] records = record.split(",");
			// 获取一个去重之后并拼接,的字符串
			newRecord = CookieUtil.getString(CookieUtil.distict(records, fid));
		}else {
			// 直接获取id;
			newRecord = fid;
		}
		Cookie cookie = new Cookie("record", newRecord);
		resp.addCookie(cookie);
		resp.setHeader("refresh", "1;url=https://www.baidu.com/");
	}
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		this.doGet(req, resp);
	}
}
