package com.yosakura.util;

import java.sql.Connection;
import java.sql.SQLException;

import org.apache.commons.dbutils.QueryRunner;

import com.mchange.v2.c3p0.ComboPooledDataSource;
/**
 * C3P0工具：获取数据源和数据库连接对象
 * @author Administrator
 *
 */

public class C3P0Util {
	private static ComboPooledDataSource dataSource = new ComboPooledDataSource();
	private static ThreadLocal<Connection> tl = new ThreadLocal<>();
	//对外提供获取数据源的方法
	public static ComboPooledDataSource getDataSoure () {
		return dataSource;
	}
	// 对外提供获取数据库连接对象的方法
	public static Connection getConnection () {
		Connection conn = null;
		try {
			conn = dataSource.getConnection();
		} catch (SQLException e) {
			// 通过数据源获取连接对象
			System.out.println("获取连接对象失败");
		}
		return conn;
	}
	// 3.获取当前线程绑定的数据库连接对象(hibernate框架的底层)
	public static Connection getcurrentConnection() {
		// 获取前线程绑定的数据库连接对象
		Connection conn = tl.get();
		// 判断是否第一次;
		if (conn == null) {
			conn = getConnection();
			// 将普通对象与当前线程绑定
			tl.set(conn);	
		}
		return conn;
	}
	
	// 4.获取dbutils的查询对象(使用此方法每次都会新建 一个连接对象,并且会自动释放资源)
	public static QueryRunner getQueryRunner () {
		return new QueryRunner(dataSource);
	}
	
	// 5.开启事务的方法
	public static void beginTransaction () throws SQLException {
		// 获取前线程绑定的数据库连接对象
		Connection conn = getcurrentConnection();
		// 设置手动提交
		conn.setAutoCommit(false);
	}
	// 6.提交事务的方法
	public static void commitTransaction () throws SQLException {
		// 获取前线程绑定的数据库连接对象
		Connection conn = getcurrentConnection();
		// 提交事务
		conn.commit();
		// 事务提交后,将手动提交还原为自动提交，方便下次调用
		conn.setAutoCommit(true);
		// 释放连接对象(归还到C3P)连接池，并没有销毁)
		conn.close();
	}
	// 6.回滚事务的方法
	public static void rollbackTransaction () {
		// 获取前线程绑定的数据库连接对象
		Connection conn = getcurrentConnection();
		try {
			// 提交事务
			conn.rollback();
			// 事务提交后,将手动提交还原为自动提交，方便下次调用
			conn.setAutoCommit(true);
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	public static void close() {
		Connection conn = getcurrentConnection();
		try {
			conn.close();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
