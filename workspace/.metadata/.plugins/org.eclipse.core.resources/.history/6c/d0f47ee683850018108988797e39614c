package com.yosakura.service;

import java.sql.SQLException;

import com.yosakura.beans.Account;
import com.yosakura.dao.AccountDaoImpl;

/**
 * 业务类
 * @author Administrator
 *
 */
public class AccountServiceImpl {
	// 转账功能
	public boolean zhuanzhang (Account account) {
		AccountDaoImpl adi = new AccountDaoImpl();
		// 付款人扣钱
		int row2 = 0;
		try {
			int row1 = adi.getMoney(account.getFrom(), account.getMoney());
			if (row1 > 0) {
				// 付款人加钱				
				row2 = adi.saveMoney(account.getTo(),account.money);
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return row2>0;
	}
}
