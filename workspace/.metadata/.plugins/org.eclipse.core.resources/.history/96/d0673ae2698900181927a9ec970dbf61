  <display-name>filterDemo</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <!-- 编码过滤器 -->
  <filter>
  	<filter-name>EncodingFilter</filter-name>
  	<filter-class>com.yosakura.web.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>EncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern> <!-- 表示过滤当前web应用的所有路径 -->
  </filter-mapping>
  <!-- 配置过滤器 -->
  <filter>
  	<filter-name>MyFilter</filter-name>
  	<filter-class>com.yosakura.web.filter.Myfilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>MyFilter</filter-name>
  	<url-pattern>/myFilter</url-pattern>
  	<url-pattern>/my</url-pattern>
  </filter-mapping>
  
</web-app>