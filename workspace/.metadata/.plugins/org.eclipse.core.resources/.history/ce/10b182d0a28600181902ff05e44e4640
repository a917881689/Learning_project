    <meta charset="UTF-8">
    <title></title>
    <script type="text/javascript" src="./js/jquery-3.1.0.min.js"></script>
    <style type="text/css">
        ul{list-style-type: none;}
        body{font-size: 14px;color: black;font-family: NSimSun;}
        *{
            margin: 0;
            padding: 0;
        }
        #container {
            margin: auto;
            margin-top: 50px;
            width: 450px;
            height: 500px;
            border: 1px solid #2456ff;
            position: relative;
            background-color: #d6ddc4;
        }
        #title>h1 {
            margin-top: 20px;
            height: 20px;
            text-align: center;
        }
        #view {
            position: absolute;
            left: 45px;
            margin-top: 20px;
            height: 300px;
        }
        #view input {
            width: 340px;
            height: 33px;
            line-height: 43px;
            border: 2px solid #CCCCCC;
            border-radius: 5px;
        }
        .text_info {
            font-size: 10px;
            margin: 3px 0 3px 5px;
            height: 20px;
        }
        #d_btn {
            position: absolute;
            left: 20px;
            bottom:20px;
        }
        button {
            border: none;
            border-radius: 5px;
            cursor:pointer;
            width: 150px;
